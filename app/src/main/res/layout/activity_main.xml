<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.eres.room4p2.MainActivity"
    android:orientation="vertical">
    <TextView
        android:id="@+id/plain_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="42sp"
        android:textColor="#4672ba"
        android:text="Find antonym" />

    <EditText
        android:id="@+id/main_Word_qeue"
        android:layout_width="match_parent"
        android:layout_marginVertical="16dp"
        android:layout_marginHorizontal="48dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/plain_text"
        android:inputType="text"
        android:hint="Please Enter A Word Here"
        />
    <Button
        android:id="@+id/enter_values"
        android:layout_width="match_parent"
        android:background="#6fd0db"
        android:layout_height="wrap_content"
        android:layout_marginBottom="22dp"
        android:layout_marginHorizontal="72dp"
        android:layout_below="@id/main_Word_qeue"
        android:text="Enter Values"
        />

    <Button
        android:id="@+id/find_ant"
        android:layout_width="match_parent"
        android:background="#6fd0db"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="72dp"
        android:layout_below="@id/main_Word_qeue"
        android:layout_toRightOf="@id/enter_values"
        android:text="Find Antonym"
        />

</LinearLayout>
